@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row">
    <div class="col-md-12">
        @if(!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with Strava</a>
        }
        else 
        {
            <div class ="row">
                <div class="col-md-2">
                    <h4>Hello @Model.Name</h4>
                </div>
            </div>
        }
    </div>
</div>
</div>
