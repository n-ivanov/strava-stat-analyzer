@page
@model StravaStatisticsAnalyzerWeb.Pages.SegmentEfforts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SegmentEffort[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegmentEffort[0].Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegmentEffort[0].MovingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegmentEffort[0].ElapsedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegmentEffort[0].AvgSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegmentEffort[0].DateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SegmentEffort) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElapsedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgSpeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.SegmentEffort.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.SegmentEffort.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndex="@(Model.SegmentEffort.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.SegmentEffort.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>

