@page
@model StravaStatisticsAnalyzer.Web.Pages.Analysis.IndexModel

@{
    ViewData["Title"] = "Analysis";
}

<h1>Analysis</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" method="post">
            <table class="table table-striped">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.AnalysisRequests[0].ActivityFilter)</th>
                        <th>@Html.DisplayNameFor(model => model.AnalysisRequests[0].StartInterval)</th>
                        <th>@Html.DisplayNameFor(model => model.AnalysisRequests[0].EndInterval)</th>
                    </tr>
                @for (var i = 0; i < Model.NumAnalyses; i++)
                {
                    <tr>
                        <td>
                            <input type="text" name="[@i].ActivityFilter" />
                        </td>
                        <td>
                            <input type="date" name="[@i].StartInterval" />
                        </td>
                        <td>
                            <input type="date" name="[@i].EndInterval" />
                        </td>
                    </tr>
                }
            </table>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
